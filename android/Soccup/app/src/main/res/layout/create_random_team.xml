<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent" tools:context="com.soccup.ConfigurationActivity"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" android:background="#EAEBFB">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <TextView
            android:text="Equipes"
            android:id="@+id/titleConfig"
            style="@style/title_page" />

        <LinearLayout
            android:id="@+id/layout_content_team_alea"
            android:layout_below="@+id/titleConfig"
            style="@style/layout_page">

            <LinearLayout
                android:id="@+id/linearTeam"
                android:layout_below="@+id/layout_content_team_alea"
                style="@style/card">

                <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                    android:text="@string/randomPageTitle" android:id="@+id/NbPlayersText"
                    android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                    android:textColor="#ABAECD" android:textSize="@dimen/textSize_13"
                    android:layout_gravity="center_vertical"
                    android:textAlignment="inherit"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="29dp"/>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/linearPlayer"
                    android:gravity="left"
                    android:textAlignment="gravity">
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
