<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/overlayBlack"
    android:id="@+id/popupAddScorer"
    android:gravity="center_vertical|center_horizontal">
    
    <LinearLayout
        android:layout_width="900px"
        android:layout_height="700px"
        android:gravity="center_horizontal"
        style="@style/card">

        <TextView
            android:text="@string/title_scorer"
            android:id="@+id/title_scorer"
            style="@style/title_card" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="340px">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scorers"
                android:orientation="vertical">

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/cancel_scorer"
            android:text="@string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="15sp"
            android:singleLine="true"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_gravity="right">
        </Button>
    </LinearLayout>
</LinearLayout>