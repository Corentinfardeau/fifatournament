<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent" tools:context="com.soccup.ConfigurationActivity"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" android:background="#EAEBFB">

    <TextView android:text="Equipes" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:textSize="19sp" android:textIsSelectable="true"
        android:background="#00E676" android:textColor="#ffffff"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:id="@+id/titleConfig"
        android:paddingLeft="36.5dp" />

    <LinearLayout
        android:id="@+id/linearTeam"
        android:layout_below="@+id/titleConfig"
        style="@style/card">
    </LinearLayout>
</RelativeLayout>
