<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#EAEBFB"
    tools:context=".MainActivity">

    <TextView
        android:text="@string/title_equipes"
        android:id="@+id/titleConfig"
        style="@style/title_page" />

    <LinearLayout
        android:id="@+id/linearConfig"
        android:layout_below="@+id/titleConfig"
        style="@style/card">



    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipe 1"
        android:layout_alignTop="@+id/linearConfig"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
