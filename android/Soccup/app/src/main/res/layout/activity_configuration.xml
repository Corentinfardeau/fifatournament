<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.soccup.ConfigurationActivity">

    <TextView
        android:text="@string/tilteConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:textIsSelectable="true"
        android:background="#00E676"
        android:textColor="#ffffff"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/titleConfig"
        android:paddingLeft="36.5dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/titleConfig"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:id="@+id/contentPage"
        android:layout_alignParentBottom="true"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#ffffff"
            android:paddingLeft="25dp"
            android:paddingTop="20dp"
            android:paddingRight="25dp"
            android:paddingBottom="40dp"
            android:id="@+id/contentTeamPlayers">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titleNbPlayers"
                android:id="@+id/titleNbPlayer"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="#ABAECD"
                android:paddingBottom="15dp"
                android:textSize="13sp" />

            <NumberPicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nbPlayers"
                android:orientation="horizontal"
                android:layout_below="@+id/titleNbPlayer"
                android:layout_alignLeft="@+id/nbPlayers"
                android:layout_alignStart="@+id/nbPlayers" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titleNbPlayersByTeam"
                android:id="@+id/titleNbPlayersByTeam"
                android:textColor="#ABAECD"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:layout_centerHorizontal="true"
                android:textSize="13sp"
                android:layout_below="@+id/nbPlayers" />

            <NumberPicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nbPlayersByTeam"
                android:layout_below="@+id/titleNbPlayersByTeam"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titleSwitch"
                android:id="@+id/titleSwitch"
                android:textColor="#ABAECD"
                android:paddingBottom="15dp"
                android:paddingTop="20dp"
                android:layout_centerHorizontal="true"
                android:textSize="13sp"
                android:layout_below="@+id/nbPlayersByTeam" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchRandom"
                android:layout_below="@+id/titleSwitch"
                android:layout_centerHorizontal="true"
                android:checked="false" />

        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/begin"
            android:id="@+id/btnBegin"
            android:layout_below="@+id/contentTeamPlayers"
            android:layout_centerHorizontal="true"
            android:background="#00E676"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:drawableRight="@drawable/arrow"
            android:layout_marginTop="40dp"
            android:drawablePadding="30dp"
            android:paddingLeft="40dp"
            android:paddingRight="30dp" />

    </RelativeLayout>

</RelativeLayout>
