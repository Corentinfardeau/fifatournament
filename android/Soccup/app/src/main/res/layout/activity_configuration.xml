<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.soccup.ConfigurationActivity">

    <TextView android:text="Configuration" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:textIsSelectable="true"
        android:background="#00E676"
        android:textColor="#ffffff"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/titleConfig"
        android:paddingLeft="36.5dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/titleConfig"
        android:layout_centerHorizontal="true"
        android:background="#EAEBFB"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:id="@+id/contentPage"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#ffffff"
            android:paddingLeft="25dp"
            android:paddingTop="20dp"
            android:paddingRight="25dp"
            android:paddingBottom="40dp"
            android:id="@+id/contentTeamPlayers">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de joueurs"
                android:id="@+id/titleNbPlayer"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="#ABAECD"
                android:paddingBottom="15dp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contentNbPlayers"
                android:layout_below="@+id/titleNbPlayer"
                android:layout_alignParentTop="false"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:background="#EAEBFB">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:id="@+id/nbPlayers"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="#221F5F" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joueurs par équipe"
                android:id="@+id/titleNbPlayersByTeam"
                android:textColor="#ABAECD"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:layout_below="@+id/contentNbPlayers"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contentNbPlayersByTeam"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:background="#EAEBFB"
                android:layout_below="@+id/titleNbPlayersByTeam"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:id="@+id/nbPlayersByTeam"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="#221F5F" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tri des équipes"
                android:id="@+id/titleSwitch"
                android:textColor="#ABAECD"
                android:paddingBottom="15dp"
                android:paddingTop="20dp"
                android:layout_below="@+id/contentNbPlayersByTeam"
                android:layout_centerHorizontal="true" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchRandom"
                android:layout_below="@+id/titleSwitch"
                android:layout_centerHorizontal="true"
                android:checked="false" />
        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commencer"
            android:id="@+id/btnBegin"
            android:layout_below="@+id/contentTeamPlayers"
            android:layout_centerHorizontal="true"
            android:background="#00E676"
            android:textColor="#FFFFFF"
            android:layout_marginTop="40dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp" />
    </RelativeLayout>

</RelativeLayout>
